*:/mail [$arg] [$to] [$] = >>>
	_checkpermission('all', player())

	if(equals_ic($arg, 'send'),
		_mail_gen($to, player(), $)
	)

	if(equals_ic($arg, 'read'),
		if(equals($to, ''),
			_mail_stat(player())
		, #else
			_mail_read(player(), $to)
		)
	)

	if(equals_ic($arg, 'clear'),
		_mail_clear(player())
	)
<<<